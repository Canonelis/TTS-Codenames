<!-- ANNOUNCES -->
<Defaults>
  <Text class="youAreOn"
        fontsize="60"
        color="#ffffff"
        alignment="LowerCenter"
        outline="#000000"
        outlinesize="2 -2">
    YOU ARE ON
  </Text>

  <Panel class="announcePanel"
         active="false"
         rectAlignment="MiddleCenter"
         showAnimation="FadeIn"
         hideAnimation="FadeOut"
         animationDuration="1">
   </Panel>

   <Text class="youAreOn"
         fontsize="60"
         color="#ffffff"
         alignment="LowerCenter"
         outline="#000000"
         outlinesize="2 -2">
   </Text>

   <Text class="teamRed"
         fontsize="175"
         color="#da1918"
         alignment="UpperCenter"
         fontstyle="Bold"
         outline="#000000"
         outlinesize="3 -3">
   </Text>

   <Text class="teamBlue"
         fontsize="175"
         color="#1f87ff"
         alignment="UpperCenter"
         fontstyle="Bold"
         outline="#000000"
         outlinesize="3 -3">
   </Text>

   <ToggleButton class="subMenu"
         colors="#FFFFFF|#FFFFFF|#C8C8C8|rgba(0,0,0,0.5)">
   </ToggleButton>

</Defaults>

